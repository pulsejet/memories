<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_name" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/widget_config_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/widget_config_subtitle"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center" />

    <!-- Interval options -->
    <RadioGroup
        android:id="@+id/interval_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/interval_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_5min"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/interval_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_15min"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <RadioButton
            android:id="@+id/interval_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_25min"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <RadioButton
            android:id="@+id/interval_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_custom"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </RadioGroup>

    <!-- Custom input (hidden until "Custom" is selected) -->
    <LinearLayout
        android:id="@+id/custom_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/custom_minutes_input"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="10"
            android:textSize="16sp"
            android:maxLength="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_minutes"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Confirm button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/widget_config_add"
        android:textSize="16sp" />

</LinearLayout>
