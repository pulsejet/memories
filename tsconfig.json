{
  "compilerOptions": {
    "lib": ["DOM", "ES2017", "WebWorker"],
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "incremental": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@services/*": ["./src/services/*"],
      "@assets": ["./src/assets"],
      "@components/*": ["./src/components/*"],
      "@mixins/*": ["./src/mixins/*"],
      "@native": ["./src/native", "./src/native/*"]
    }
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
